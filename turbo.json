{
  "$schema": "https://turbo.build/schema.json",
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "type-check": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "lint": {
    "outputs": [],
      "dependsOn": []
    },
    "format": {
      "outputs": []
    },
    "format:check": {
      "outputs": []
    },
    "develop": {
      "cache": false,
      "persistent": true
    },
    "codegen": {
      "outputs": ["src/schema/types.generated.ts"]
    },
    "codegen:watch": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "outputs": []
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "test:ui": {
      "cache": false,
      "persistent": true
    },
    "test:perf": {
      "outputs": []
    },
    "test:coverage": {
      "outputs": ["coverage/**"]
    }
  }
}
